{
  "name": "react-regex-tester",
  "version": "1.0.0",
  "description": "A regex tester SPA",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "cd client && npm run build && cp -r build ../",
    "dev": "concurrently \"nodemon server.js\" \"cd client && npm start\"",
    "postinstall": "cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
